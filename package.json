{
    "name": "vite-electron-builder",
    "description": "Secure boilerplate for Electron app based on Vite",
    "private": true,
    "engines": {
        "node": ">=v16.13",
        "pnpm": ">=7.1"
    },
    "author": {
        "email": "kozackunisoft@gmail.com",
        "name": "Alex Kozack",
        "url": "https://kozack.me"
    },
    "main": "packages/main/dist/index.cjs",
    "scripts": {
        "upd": "pnpm update",
        "dev": "node scripts/watch.js",
        "lint": "eslint . --ext js,ts,vue",
        "lintall": "pnpx prettier --write .",
        "build": "pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
        "build:main": "cd ./packages/main && vite build",
        "build:preload": "cd ./packages/preload && vite build",
        "build:renderer": "cd ./packages/renderer && vite build",
        "compile": "cross-env MODE=production pnpm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
        "test": "pnpm run test:main && pnpm run test:preload && pnpm run test:renderer && pnpm run test:e2e",
        "test:e2e": "vitest run",
        "test:main": "vitest run -r packages/main --passWithNoTests",
        "test:preload": "vitest run -r packages/preload --passWithNoTests",
        "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
        "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
        "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
        "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
        "typecheck": "pnpm run typecheck:main && pnpm run typecheck:preload && pnpm run typecheck:renderer",
        "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 pnpx electron ./scripts/update-electron-vendors.js "
    },
    "dependencies": {
        "body-parser": "^1.20.0",
        "cors": "^2.8.5",
        "electron-store": "^8.0.2",
        "electron-updater": "^5.0.5",
        "express": "^4.18.1",
        "express-validation": "^4.1.0",
        "luxon": "^2.4.0",
        "node-thermal-printer": "^4.1.2",
        "vue": "^3.2.37"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "@types/body-parser": "^1.19.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/luxon": "^2.3.2",
        "@types/node": "^18.0.3",
        "@typescript-eslint/eslint-plugin": "^5.30.5",
        "@typescript-eslint/parser": "^5.30.5",
        "@vitejs/plugin-vue": "^2.3.3",
        "@vue/test-utils": "^2.0.2",
        "autoprefixer": "^10.4.7",
        "cross-env": "^7.0.3",
        "electron": "19.0.7",
        "electron-builder": "^23.1.0",
        "electron-devtools-installer": "^3.2.0",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-vue": "^9.2.0",
        "happy-dom": "^6.0.2",
        "nano-staged": "^0.8.0",
        "playwright": "^1.23.2",
        "postcss": "^8.4.14",
        "prettier": "^2.7.1",
        "prettier-plugin-tailwindcss": "^0.1.12",
        "simple-git-hooks": "^2.8.0",
        "tailwindcss": "^3.1.5",
        "typescript": "^4.7.4",
        "unplugin-auto-expose": "^0.0.1",
        "vite": "^2.9.13",
        "vitest": "^0.17.1",
        "vue-tsc": "^0.38.3"
    }
}
